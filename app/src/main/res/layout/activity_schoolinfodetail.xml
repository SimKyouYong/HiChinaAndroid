<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ff0000"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/top_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="뒤로가기"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="#00000000"
            />

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:visibility="gone"
            android:text="China"/>

        <Button
            android:id="@+id/top_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bodyview"
        android:layout_width="match_parent"
        android:layout_below="@+id/topview"
        android:orientation="vertical"
        android:background="#DCDCDC"
        android:layout_height="300dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="#000000" android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:id="@+id/txt_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내용...."
                android:textColor="#000000" android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:id="@+id/txt_body"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"

                    android:text="adsfsa"
                    android:textColor="#000000"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.8"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"

                    android:layout_marginTop="5dp"
                    android:text="adsfsa"
                    android:textColor="#000000"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/good_tv"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="adsfsa"
                    android:textColor="#000000"
                    android:textSize="11dp" />


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomview1"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/comment_eidt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:hint="내용을 입력해주세요"/>
        <Button
            android:layout_width="wrap_content"
            android:text="등록"
            android:id="@+id/comment_btn"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bodyview"
        android:layout_above="@+id/bottomview1"
        android:divider="#dfdede"
        android:dividerHeight="1dp" />
</RelativeLayout>

